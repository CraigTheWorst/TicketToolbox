<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navy_blue"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintContainerContainer"
            android:layout_width="match_parent"
            android:layout_height="577dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonconstraintContainer"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="140dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/calendarButtonConstraint"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="51dp"
                    android:layout_marginBottom="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fileboxButtonConstraint">

                    <ImageButton
                        android:id="@+id/CalendarButton1"
                        android:layout_width="123dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/roundedlinearlayout"
                        android:contentDescription="@string/it_s_a_calendar_which_displays_tickets_that_require_return_shipping_labels_based_on_the_day_the_ticket_was_completed"
                        android:elevation="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_return_parts_button5"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/label_CalendarButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="36dp"
                        android:layout_marginEnd="36dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="@string/return_parts2"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/CalendarButton1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fileboxButtonConstraint"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginBottom="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageButton
                        android:id="@+id/ImagesButton1"
                        android:layout_width="123dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/roundedlinearlayout"
                        android:contentDescription="@string/filebox"
                        android:elevation="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_images_button3"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/label_ImagesButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/black_ops_one"
                        android:gravity="center"
                        android:text="@string/images2"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/ImagesButton1"
                        app:layout_constraintEnd_toEndOf="@id/ImagesButton1"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="@id/ImagesButton1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/notepadButtonConstraint"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/formsConstraint"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/NotepadButton1"
                        android:layout_width="123dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/roundedlinearlayout"
                        android:contentDescription="@string/normal_note_taking_application"
                        android:elevation="12dp"
                        android:foregroundGravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_notepad_button3"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/label_notepad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:layout_marginEnd="52dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="@string/notepad"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/NotepadButton1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/formsConstraint"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/FormsButton1"
                        android:layout_width="123dp"
                        android:layout_height="125dp"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/roundedlinearlayout"
                        android:contentDescription="@string/fill_out_a_form_that_documents_packages_in_need_of_return_shipping_labels"
                        android:elevation="12dp"
                        android:foregroundGravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_form_button5"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <TextView
                        android:id="@+id/label_return_parts_form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="@string/return_form2"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toTopOf="@+id/FormsButton1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_techGuy"
                android:layout_width="556dp"
                android:layout_height="317dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="51dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/todo56"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonconstraintContainer"
                app:srcCompat="@drawable/techguy3update_pr" />

            <TextView
                android:id="@+id/tv_Welcome"
                android:layout_width="215dp"
                android:layout_height="163dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="150dp"
                android:text="@string/welcome_message"
                android:textColor="#FFFFFF"
                android:textSize="11.5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonconstraintContainer" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="408dp"
            android:layout_height="82dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/infoDisplayContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/AppTitleMain"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/black_ops_one"
                android:gravity="center"
                android:text="@string/ticket_toolbox"
                android:textAlignment="center"
                android:textColor="#FAF6F6"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                app:layout_constraintEnd_toStartOf="@+id/iv_tb_2"
                app:layout_constraintStart_toEndOf="@+id/iv_tb_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.314" />

            <ImageView
                android:id="@+id/iv_tb_1"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:contentDescription="@string/todo8687"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/toolbox_orange3_48_48" />

            <ImageView
                android:id="@+id/iv_tb_2"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:contentDescription="@string/todo6547567"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/toolbox_orange4_48_48_pr" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoDisplayContainer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/rounded_layout_grey"
            app:layout_constraintBottom_toTopOf="@+id/ConstraintContainerContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/tv_RPStats2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_RP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/return_parts"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_RPStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="5dp"
                android:text="@string/imagescolon"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/tv_RP"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_Notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:text="@string/notes"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_RPStats3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/drawer_main_activity"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@color/navy_blue">

        <!-- Add your drawer items here -->

        <!-- Drawer Item: HOME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home1"
                android:contentDescription="@string/home_icon" />

            <TextView
                android:id="@+id/Home_Hamburger3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Home"
                android:textColor="@color/gold"
                android:layout_gravity="center"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white" />


        <!-- Drawer Item: FORMS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/home_icon"
                android:src="@drawable/ic_form_button5" />

            <TextView
                android:id="@+id/Forms_Hamburger3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Return Form"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Drawer Item: IMAGES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_images_button3"
                android:contentDescription="@string/home_icon" />

            <TextView
                android:id="@+id/Images_Hamburger3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Images"
                android:textColor="@color/white"
                android:padding="16dp"/>

        </LinearLayout>

        <!-- Drawer Item: NOTEPAD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notepad_button3"
                android:contentDescription="@string/home_icon" />

            <TextView
                android:id="@+id/Notepad_Hamburger3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notepad"
                android:textColor="@color/white"
                android:padding="16dp"/>

        </LinearLayout>


        <!-- Drawer Item: RETURN PARTS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_return_parts_button5"
                android:contentDescription="@string/home_icon" />

            <TextView
                android:id="@+id/Return_Parts_Hamburger3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Parts"
                android:textColor="@color/white"
                android:padding="16dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>