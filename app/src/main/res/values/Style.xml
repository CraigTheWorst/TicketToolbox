<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CalendarViewStyle" parent="@android:style/Widget.CalendarView">
        <item name="android:dateTextAppearance">@style/CalenderViewDateCustomText</item>
        <item name="android:weekDayTextAppearance">@style/CalenderViewWeekCustomText</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalenderViewMonthArrows" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#00000000</item>
    </style>


    <style name="buttonStyleWhite" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#000000</item> <!-- Black color for text -->
        <item name="android:popupBackground">#FFFFFF</item> <!-- White color for background -->
    </style>

    <style name="PopupMenuStyle2" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="PopupMenuOverlay" parent="">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
    </style>






</resources>