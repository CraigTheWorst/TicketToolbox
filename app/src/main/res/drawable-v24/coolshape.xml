<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#F1F1F1" />
    <corners
        android:radius="32dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp" />
    <gradient
        android:startColor="#EDEDED"
        android:centerColor="#F8F8F8"
        android:endColor="#EDEDED"
        android:angle="0" />
    <stroke
        android:width="3dp"
        android:color="#00CC00" />
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="10dp"
        android:bottom="8dp" />
    <size
        android:width="280dp"
        android:height="32dp" />
    <inset
        android:insetLeft="2dp"
        android:insetRight="2dp"
        android:insetTop="2dp"
        android:insetBottom="2dp">
        <shape>
            <gradient
                android:startColor="#F1F1F1"
                android:endColor="#EDEDED"
                android:angle="0" />
            <corners
                android:radius="32dp"
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#101845" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="16dp"
                android:bottom="48dp" />
        </shape>
    </inset>
</shape>





